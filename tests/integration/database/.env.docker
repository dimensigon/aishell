# AI-Shell Database Integration Test Environment Configuration
# Docker Compose Environment Variables

# ================================
# PostgreSQL Configuration
# ================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=MyPostgresPass123

# Connection pool settings
POSTGRES_POOL_MAX=20
POSTGRES_POOL_IDLE_TIMEOUT=30000
POSTGRES_POOL_CONNECTION_TIMEOUT=5000

# ================================
# MongoDB Configuration
# ================================
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DATABASE=test_integration_db
MONGO_USERNAME=admin
MONGO_PASSWORD=MyMongoPass123
MONGO_AUTH_SOURCE=admin

# Connection string format
# mongodb://admin:MyMongoPass123@localhost:27017/test_integration_db?authSource=admin

# ================================
# MySQL Configuration
# ================================
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=test_integration_db
MYSQL_USER=testuser
MYSQL_PASSWORD=testpass
MYSQL_ROOT_PASSWORD=MyMySQLPass123

# Connection pool settings
MYSQL_POOL_MAX=20
MYSQL_POOL_IDLE_TIMEOUT=30000
MYSQL_POOL_CONNECTION_TIMEOUT=5000

# ================================
# Redis Configuration
# ================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=MyRedisPass123
REDIS_DB=0

# Connection pool settings
REDIS_POOL_MAX=20
REDIS_POOL_IDLE_TIMEOUT=30000

# ================================
# SQLite Configuration
# ================================
# SQLite is file-based, no container needed
SQLITE_DATABASE=./test_integration.db

# ================================
# Test Configuration
# ================================
NODE_ENV=test
LOG_LEVEL=debug
TEST_TIMEOUT=30000

# ================================
# Docker Compose Settings
# ================================
COMPOSE_PROJECT_NAME=aishell_integration_tests
