{
  "name": "ai-shell-tests",
  "version": "1.0.0",
  "description": "Comprehensive test suite for AI-Shell components",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
